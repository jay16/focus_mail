<% @member ||= @list.members.build %>
<%= form_for([@list, @member], :html => { :class => 'form-horizontal' }) do |f| %>

  <%= render :partial => "common/form_error", :locals => { model: @list } %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :id => 'member_submit', :class => 'btn btn-primary' %>
    <a onclick="$('#form').fadeOut().replaceWith('<form/>');window.scrollTo(0,0);return false;", class='btn'>Cancel</a>
    
  </div>
<% end %>
