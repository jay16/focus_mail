            <% @lists.each_with_index do |list,index| %>
             <%= check_box_tag "list_ids_"+index.to_s, list.id, @campaign.lists.include?(list), :name => 'campaign[list_ids][]'  -%>
             <%= label_tag "list_ids_"+index.to_s, :style => "display:inline" do %>
               <%= list.name%>
            <% end %><br>
