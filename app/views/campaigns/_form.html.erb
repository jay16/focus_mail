           <%= f.select :list_ids, @lists.map{|l| [l.name, l.id]}, { :include_blank => true }, {:multiple => true, :class => "chzn-select-deselect", "data-placeholder" => "Choose a Lists"} %>
          </div>
         </div>
       <!--
       <div>邮件列表:</div>
