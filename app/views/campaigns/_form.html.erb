  <%= f.hidden_field :org_id %>


  <div class="control-group" style="margin-top:5px;">
   <%= f.label :name, "活动名称：", :class => 'control-label',:style=>"text-align:left;margin-left:20px;width:70px;" %>
   <div class="controls" style="margin-left:90px;">
