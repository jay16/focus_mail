<br>
<table id="report_table" class="table table-striped">
  <thead>
    <tr>
      <th>邮件组名</th>
      <th>邮件总数</th>
      <th>打开人数</th>
      <th>独立图表分析</th>
      <th>打开邮件名单</th>
      <th>对比图表分析</th>
    </tr>
  </thead>
  <tbody>
    <% @isFirst = true %>
    <% @campaign_track_report.each do |report| %>
      <tr>
        <td><%= report[0] %></td>
        <td><%= report[1] %></td>
        <td><%= report[2] %></td>
        <td><%= link_to '独立报表', {:controller=>'report',:action=>'track',:campaign_id => report[3] }, :remote => true, :class => 'btn btn-primary' %></td>
        <td><%= link_to '名单', {:controller=>'report',:action=>'track_list',:campaign_id => report[3] }, :remote => true, :class => 'btn btn-primary' %></td>
        <% if @isFirst %>
        <td><%= link_to '对比报表', {:controller=>'report',:action=>'track'}, :remote => true, :class => 'btn btn-primary' %></td> 
        <% @isFirst = false %>
        <% end %>
      </tr>
      <% end %>
  </tbody>
</table>
      


